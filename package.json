{
  "name": "zenmind-financial-assistant",
  "version": "1.0.0",
  "private": true,
  "description": "WhatsApp-based financial assistant platform",
  "workspaces": [
    "zenmind-website",
    "whatsapp-integration"
  ],
  "scripts": {
    "dev": "npm run dev:website",
    "dev:website": "cd zenmind-website && npm run dev",
    "dev:whatsapp": "cd whatsapp-integration && npm start",
